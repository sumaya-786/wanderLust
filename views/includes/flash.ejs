<%if(success && success.length){%>
    <% success.forEach(function(msg) { %>
    <div class="alert alert-success alert-dissmissible fade show col-6 offset-3" role="alert">
        <%=msg%>
        <button type="button" 
        class="btn-close" 
        data-bs-dismiss="alert" 
        aria-label="Close"
        ></button>
    </div>
<% }); %>
<% } %>

